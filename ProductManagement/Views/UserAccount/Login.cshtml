@model ProductManagement.Models.UserData

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_UserAccount.cshtml";
}

<div class="registration-form">
  
    <form method="post" action="~/UserAccount/Login">
        <div class="form-icon">
            <span><i class="icon icon-user"></i></span>
        </div>
        @if (TempData["IncorrectUser"] != null)
        {
            <b style="color:red" class="avds_xl_background">@TempData["IncorrectUser"].ToString()</b>
        }
        <div class="form-group">
            <input type="text" class="form-control item" id="email" name="email" placeholder="Email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control item" id="password" name="password" placeholder="Password">
        </div>
        <div class="form-group">
            <input type="submit" name="name" value="Login" class="btn btn-block create-account"/>
        </div>
    </form>
    <div class="social-media">
       <p>Product Management</p>
    </div>
</div>

